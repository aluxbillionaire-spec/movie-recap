# Environment Variables Template for Local Development
# Copy this file to .env.local and fill in the values

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=development
DEBUG=true
APP_NAME="Movie Recap Service"
APP_VERSION=1.0.0

# =================================
# DOMAIN AND URLS
# =================================
DOMAIN=localhost
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000
CDN_URL=http://localhost:9000

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres_local_password
DB_NAME=movie_recap_dev
DATABASE_URL=postgresql://postgres:postgres_local_password@localhost:5432/movie_recap_dev

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_local_password
REDIS_URL=redis://:redis_local_password@localhost:6379/0

# =================================
# SECURITY SETTINGS
# =================================
SECRET_KEY=dev_secret_key_change_in_production
JWT_SECRET=jwt_dev_secret_change_in_production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=dev_encryption_key_32_characters

# =================================
# CORS AND ORIGINS
# =================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_ENABLED=true

# =================================
# REGIONAL SETTINGS
# =================================
REGION=local
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en

# =================================
# STORAGE CONFIGURATION
# =================================
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# =================================
# EMAIL CONFIGURATION (Optional for dev)
# =================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=dev@localhost
SMTP_PASSWORD=dev_email_password
FROM_EMAIL=noreply@localhost

# =================================
# MONITORING AND LOGGING
# =================================
LOG_LEVEL=debug
LOG_FORMAT=dev
ENABLE_METRICS=true
METRICS_PORT=9090

# =================================
# DEVELOPMENT TOOLS
# =================================
HOT_RELOAD=true
AUTO_RELOAD=true
VITE_HMR_PORT=3000
# Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="Movie Recap Service"
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false

# Upload Configuration
VITE_MAX_FILE_SIZE=5368709120
VITE_ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/quicktime,video/webm
VITE_ALLOWED_SCRIPT_TYPES=text/plain,application/pdf,application/msword

# WebSocket Configuration (for real-time updates)
VITE_WS_URL=ws://localhost:8000/ws

# Third-party Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Development Tools
VITE_STORYBOOK_ENABLED=false
VITE_MOCK_API=false
# Environment Variables Template for Production Deployment
# Copy this file to .env.production and fill in the values with SECURE credentials

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=production
DEBUG=false
APP_NAME="Movie Recap Service"
APP_VERSION=1.0.0

# =================================
# DOMAIN AND URLS
# =================================
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com
API_URL=https://api.your-domain.com
CDN_URL=https://cdn.your-domain.com

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=your-prod-db-host
DB_PORT=5432
DB_USER=movie_recap_prod_user
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD
DB_NAME=movie_recap_prod
DATABASE_URL=postgresql://movie_recap_prod_user:CHANGE_ME_SECURE_DB_PASSWORD@your-prod-db-host:5432/movie_recap_prod

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@your-redis-host:6379/0

# =================================
# SECURITY SETTINGS
# =================================
SECRET_KEY=CHANGE_ME_SECURE_SECRET_KEY_64_CHARACTERS_MIN
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_64_CHARACTERS_MIN
JWT_EXPIRES_IN=1h
ENCRYPTION_KEY=CHANGE_ME_SECURE_ENCRYPTION_KEY_32_CHARS

# =================================
# CORS AND ORIGINS
# =================================
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com,https://admin.your-domain.com
CORS_ENABLED=true

# =================================
# REGIONAL SETTINGS
# =================================
REGION=us-east-1
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en

# =================================
# AWS/CLOUD STORAGE CONFIGURATION
# =================================
STORAGE_PROVIDER=s3
S3_BUCKET=movie-recap-assets-prod
S3_REGION=us-east-1
S3_ACCESS_KEY=CHANGE_ME_S3_ACCESS_KEY
S3_SECRET_KEY=CHANGE_ME_S3_SECRET_KEY
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# =================================
# MINIO CONFIGURATION (Alternative to S3)
# =================================
MINIO_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY
MINIO_ENDPOINT=https://minio.your-domain.com

# =================================
# EMAIL CONFIGURATION
# =================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=CHANGE_ME_SECURE_EMAIL_PASSWORD
FROM_EMAIL=noreply@your-domain.com

# =================================
# SSL/TLS CONFIGURATION
# =================================
SSL_ENABLED=true
ACME_EMAIL=admin@your-domain.com
CERT_RESOLVER=letsencrypt

# =================================
# MONITORING AND LOGGING
# =================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# =================================
# GRAFANA CONFIGURATION
# =================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_SECURE_GRAFANA_PASSWORD

# =================================
# PERFORMANCE SETTINGS
# =================================
MAX_CONNECTIONS=100
POOL_SIZE=20
MAX_OVERFLOW=30
POOL_TIMEOUT=30

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=movie-recap-backups-prod
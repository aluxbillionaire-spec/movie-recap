# Environment Variables Template for Staging Deployment
# Copy this file to .env.staging and fill in the values

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=staging
DEBUG=true
APP_NAME="Movie Recap Service - Staging"
APP_VERSION=1.0.0

# =================================
# DOMAIN AND URLS
# =================================
DOMAIN=staging.your-domain.com
BASE_URL=https://staging.your-domain.com
API_URL=https://api-staging.your-domain.com
CDN_URL=https://cdn-staging.your-domain.com

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=staging-db-host
DB_PORT=5432
DB_USER=movie_recap_staging_user
DB_PASSWORD=CHANGE_ME_STAGING_DB_PASSWORD
DB_NAME=movie_recap_staging
DATABASE_URL=postgresql://movie_recap_staging_user:CHANGE_ME_STAGING_DB_PASSWORD@staging-db-host:5432/movie_recap_staging

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STAGING_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_STAGING_REDIS_PASSWORD@staging-redis-host:6379/0

# =================================
# SECURITY SETTINGS
# =================================
SECRET_KEY=CHANGE_ME_STAGING_SECRET_KEY_64_CHARACTERS
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_64_CHARACTERS
JWT_EXPIRES_IN=2h
ENCRYPTION_KEY=CHANGE_ME_STAGING_ENCRYPTION_KEY_32

# =================================
# CORS AND ORIGINS
# =================================
ALLOWED_ORIGINS=https://staging.your-domain.com,https://app-staging.your-domain.com
CORS_ENABLED=true

# =================================
# REGIONAL SETTINGS
# =================================
REGION=us-west-2
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en

# =================================
# AWS/CLOUD STORAGE CONFIGURATION
# =================================
STORAGE_PROVIDER=s3
S3_BUCKET=movie-recap-assets-staging
S3_REGION=us-west-2
S3_ACCESS_KEY=CHANGE_ME_STAGING_S3_ACCESS_KEY
S3_SECRET_KEY=CHANGE_ME_STAGING_S3_SECRET_KEY
S3_ENDPOINT=https://s3.us-west-2.amazonaws.com

# =================================
# MINIO CONFIGURATION
# =================================
MINIO_ACCESS_KEY=CHANGE_ME_STAGING_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_STAGING_MINIO_SECRET_KEY
MINIO_ENDPOINT=https://minio-staging.your-domain.com

# =================================
# EMAIL CONFIGURATION
# =================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=staging@your-domain.com
SMTP_PASSWORD=CHANGE_ME_STAGING_EMAIL_PASSWORD
FROM_EMAIL=staging@your-domain.com

# =================================
# SSL/TLS CONFIGURATION
# =================================
SSL_ENABLED=true
ACME_EMAIL=admin@your-domain.com
CERT_RESOLVER=letsencrypt

# =================================
# MONITORING AND LOGGING
# =================================
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# =================================
# GRAFANA CONFIGURATION
# =================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STAGING_GRAFANA_PASSWORD

# =================================
# PERFORMANCE SETTINGS
# =================================
MAX_CONNECTIONS=50
POOL_SIZE=10
MAX_OVERFLOW=20
POOL_TIMEOUT=30

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=3600

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=movie-recap-backups-staging